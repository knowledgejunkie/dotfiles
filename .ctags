--recurse
--tag-relative=yes

--fields=+l

--exclude=CVS
--exclude=.git
--exclude=.hg
--exclude=build
--exclude=debian
--exclude=DEBIAN
--exclude=doc
--exclude=docs
--exclude=log
--exclude=logs
--exclude=tmp
--exclude=todo

--languages=-sql,javascript

--langdef=markdown
--langmap=markdown:.md
--regex-markdown=/^#[ \t]+(.*)/\1/h,Heading_L1/
--regex-markdown=/^##[ \t]+(.*)/\1/i,Heading_L2/
--regex-markdown=/^###[ \t]+(.*)/\1/k,Heading_L3/
--regex-markdown=/^####[ \t]+(.*)/\1/k,Heading_L4/
--regex-markdown=/^#####[ \t]+(.*)/\1/k,Heading_L5/
--regex-markdown=/^######[ \t]+(.*)/\1/k,Heading_L6/
